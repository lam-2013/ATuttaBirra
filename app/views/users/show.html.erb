<% provide :title, @user.name %>
<div id="banner">

  <%= render 'shared/infoutente' %>
</div>

<% if current_user?(@user) %>
    <div id="bottone_modifica">
      <a href="" class="button">Modifica</a>
    </div>
<% end %>


<div class="row">
  <aside class="span4">

    <section>
          <%= render 'shared/barra_amico' %>
    </section>

    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>

  <div class="span8">
    <%= render 'follow_form' if signed_in? %>
    <% if @user.posts.any? %>
      <h3>Posts (<%= @user.posts.count %>)</h3>
      <ol class="posts">
        <%= render @posts %>
      </ol>
      <% # since we are in a Users view, we need to specify that the pagination is for the posts %>
      <% will_paginate @posts %>
    <% end %>

</div>
   </div>