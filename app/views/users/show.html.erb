<% #Provide the page title in a symbol to application.html.erb to avoid duplication %>
<% provide :title, @user.name %>

<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>


        <h2>Punteggio <%= @user.punteggio.to_i  %></h2>

      </h1>

      <p>
        <%= link_to "Amici", :action => "amici" %> <br>
        <%= link_to "Gallery", :action => "gallery" %>       <br>
        <%= link_to "Messaggi", :action => "messaggi" %>     <br>
        <%= link_to "Il mio Birrificio", :action => "il_mio_birrificio" %> <br>
        <%= link_to "In Cantina", :action => "in_cantina" %> <br>
        <%= link_to "Gusta", :action => "gusta" %>       <br>
        <%= link_to "Mercatino", :action => "mercatino" %>    <br>
        <%= link_to "Gruppi", :action => "gruppi" %>


      </p>

    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>

  <div class="span8">
    <%= render 'follow_form' if signed_in? %>
    <% if @user.posts.any? %>
      <h3>Posts (<%= @user.posts.count %>)</h3>
      <ol class="posts">
        <%= render @posts %>
      </ol>
      <% # since we are in a Users view, we need to specify that the pagination is for the posts %>
      <% will_paginate @posts %>
    <% end %>
  </div>
</div>
