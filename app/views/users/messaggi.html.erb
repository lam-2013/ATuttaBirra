<% provide :title, 'Messaggi' %>
<div id="banner">

<% if current_user?(@user) %>
  <%  @user = User.find(params[:id])  %>
<% end %>
<%= render 'shared/infoutente' %>

</div>
<% if @user == current_user%>
<div>
  <h2> - Messaggi - </h2>
  <%= image_tag ("Messaggi.png") %>
</div>

<% else %>
<div class="row">
  <aside class="span4">
    <section>
      <%= render 'shared/barra_amico' %>
    </section>
  </aside>

  <div class="span8">
    <h2> - Messaggi - </h2>
    <%= image_tag ("MessaggiAmico.png") %>

  </div>
</div>
<% end %>