<% provide :title, 'Amici' %>

<div id="banner">

  <% if current_user?(@user) %>
      <%  @user = User.find(params[:id])  %>
  <% end %>
  <%= render 'shared/infoutente' %>
</div>

<% if @user == current_user%>
    <div>
      <h2> - Amici - </h2>
      <%= image_tag ("Amici.png") %>
    </div>

<% else %>
    <div class="row">
      <aside class="span3">
        <section>
          <%= render 'shared/barra_amico' %>
        </section>
      </aside>

      <div class="span9">
        <h2> - Amici - </h2>
        <%= image_tag ("Amici.png") %>
      </div>
    </div>



<% end %>



